<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrapLogin.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/lib/bootstrap/dist/css/bootstrapLogin.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body style="background: url('@Url.Content("~/images/LoginImage.jpg")')">
    <!-- if you want to create login page and register page together in one page ...you have to only chnage his name...that's it...                 -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="wrapR">
                    <p class="form-title">
                        Register
                    </p>
                    <br />
                    <ul class="nav nav-pills">

                        <li class="" style="width:auto; margin-bottom:-5%; margin-left:21%"><a class="btn btn-lg btn-default" data-toggle="tab" href="#doctor">Doctor</a></li>

                        <li class="" style="width:auto; margin-bottom:-5%"><a class="btn btn-lg btn-default" data-toggle="tab" href="#assistant">Assistant</a></li>

                        <li class=" " style="width:auto; margin-bottom:-5%"><a class=" btn btn-lg btn-default" data-toggle="tab" href="#company">Company</a></li>

                    </ul>
                    <br />

                    <div class="tab-content">
                        <div id="doctor" class="tab-pane fade in active">

                            <form class="register" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <input type="text" placeholder="Doctor Name" />

                                <input type="email" placeholder="Email" asp-for="Input.Email" />

                                <input type="password" placeholder="Password" asp-for="Input.Password" />

                                <input type="password" placeholder="Confirm Password" asp-for="Input.ConfirmPassword" />

                                <input type="submit" value="Submit" style="margin-top: 10%; margin-left: 20%" class=" btn btn-lg btn-default" name="DoctorSubmit" />

                            </form>

                        </div>
                        <div id="assistant" class="tab-pane fade">

                            <form class="register" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <input type="text" placeholder="Assistant Name" />

                                <input type="email" placeholder="Email" asp-for="Input.Email" />

                                <input type="password" placeholder="Password" asp-for="Input.Password" />

                                <input type="password" placeholder="Confirm Password" asp-for="Input.ConfirmPassword" />

                                <input type="submit" value="Submit" style="margin-top: 10%; margin-left: 20%" class=" btn btn-lg btn-default" name="DoctorSubmit" />

                            </form>

                        </div>
                        <div id="company" class="tab-pane fade">

                            <form class="register" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <input type="text" placeholder="Company Name" />

                                <input type="email" placeholder="Email" asp-for="Input.Email" />

                                <input type="password" placeholder="Password" asp-for="Input.Password" />

                                <input type="password" placeholder="Confirm Password" asp-for="Input.ConfirmPassword" />

                                <input type="submit" value="Submit" style="margin-top: 10%; margin-left: 20%" class=" btn btn-lg btn-default" name="DoctorSubmit" />

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- This design is created by manoj chauhan  -->
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
