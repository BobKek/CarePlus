@model Clinic.Models.BindingModels.MessageBindingModel

@{
    ViewData["Title"] = "AskAdmin";
}


<div class="container">
    <div class="row inbox">
        <div class="col-md-9">
            <div class="panel panel-default" style="margin-top: 20px;">
                <div class="panel-body message">
                    <p class="text-center">New Message to Admin</p>
                    <form asp-controller="Home" asp-action="AskAdmin" class="form-horizontal" role="form" method="post" id="messageForm">

                        <div class="form-group">
                            <label asp-for="Name" class="col-sm-1 control-label">Your Name:</label>
                            <div class="col-sm-11">
                                <input asp-for="Name" class="form-control select2-offscreen" placeholder="Name" tabindex="-1" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-sm-1 control-label">Your Email:</label>
                            <div class="col-sm-11">
                                <input asp-for="Email" class="form-control select2-offscreen" placeholder="Email" tabindex="-1" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject" class="col-sm-1 control-label">Subject:</label>
                            <div class="col-sm-11">
                                <input asp-for="Subject" class="form-control select2-offscreen" placeholder="Subject" tabindex="-1" />
                            </div>
                        </div>

                    </form>

                    <div class="col-sm-11 col-sm-offset-1">
                        <br>

                        <div class="form-group">
                            <textarea asp-for="Memo" class="form-control" form="messageForm" id="message" rows="12" placeholder="Enter your message here..."></textarea>
                        </div>

                        <div class="form-group">
                            <button form="messageForm" type="submit" class="btn btn-success">Send</button>
                            <a asp-controller="Home" asp-action="Index"><button type="submit" class="btn btn-danger">Discard</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/.col-->
    </div>
</div>