@model Clinic.Models.BindingModels.DoctorBindingModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<div class="row">
    <div class="col-md-10">
        <form class="register" asp-controller="Admins" asp-action="CreatePeople" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <input asp-for="Firstname" placeholder="First Name" />
                <span asp-validation-for="Firstname" style="width:1000%;"></span>
            </div>
            <div>
                <input asp-for="Lastname" placeholder="Last Name" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Gender" placeholder="Gender" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Specialty" placeholder="Speciality" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Address" placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="PhoneNumber" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div>
                <input type="password" placeholder="Password" />
                <span  class="text-danger"></span>
            </div>
            <div>
                <input type="password" placeholder="Confirm Password" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-lg btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
