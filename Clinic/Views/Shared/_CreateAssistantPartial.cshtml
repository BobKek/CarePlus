@model Clinic.Models.BindingModels.AssistantBindingModel

@{
    ViewData["Title"] = "Create Assistant";
    Layout = null;
}
<div class="row">
    <div class="col-md-10">
        <form id="regAssistant" class="register" style="width:80%;" asp-controller="Admins" asp-action="CreateAssistant" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <input asp-for="Firstname" placeholder="First Name" />
                <span asp-validation-for="Firstname"></span>
            </div>
            <div>
                <input asp-for="Lastname" placeholder="Last Name" />
                <span asp-validation-for="Lastname"></span>
            </div>
            <div>
                <input asp-for="Address" placeholder="Address" />
                <span asp-validation-for="Address"></span>
            </div>
            <div>
                <input asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <input asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <input asp-for="PhoneNumber" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div>
                <select asp-for="DoctorId" asp-items="@ViewBag.DoctorsList"></select>
            </div>
            <div>
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </form>
        <div class="form-group">
            <input form="regAssistant" type="submit" value="Create" style="margin-left:27%;" class="btn btn-lg btn-default" />
            <a asp-controller="Home" asp-action="Index" style="margin-left: 7%; border-bottom-width:10px;"><button class="btn btn-lg btn-default">Cancel</button></a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
